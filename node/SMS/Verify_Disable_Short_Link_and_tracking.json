{
	"info": {
		"_postman_id": "291ec226-7644-43f8-9d88-1511a36ce864",
		"name": "Verify_Disable_Short_Link_and_tracking",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "6765444",
		"_collection_link": "https://ongageqa.postman.co/workspace/AT-SMS~91e83416-2269-42d0-be32-66c40d50eb55/collection/6765444-291ec226-7644-43f8-9d88-1511a36ce864?action=share&creator=6765444&source=collection_link"
	},
	"item": [
		{
			"name": "Create and Send Campaign",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonData = pm.response.json()",
							"if(jsonData.metadata.error === false) {",
							"pm.globals.set(\"disable_short_link_tracking_campaign_id\", jsonData.payload.id);",
							"}",
							"pm.globals.unset(\"time_30\");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.globals.set(\"time_30\", Math.round((new Date()).getTime() / 1000) + 30);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X_USERNAME",
						"type": "text",
						"value": "{{username}}"
					},
					{
						"key": "X_PASSWORD",
						"type": "text",
						"value": "{{password}}"
					},
					{
						"key": "X_ACCOUNT_CODE",
						"type": "text",
						"value": "{{account_code}}"
					},
					{
						"key": "Content-Type",
						"type": "text",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n   \"name\": \"Verify disable short link and tracking\",\n   \"list_id\": {{list_id}} ,\n   \"email_message\": {{sms_id_test_disable_short_link_tracking}} ,\n   \"segments\": [{{disable_short_link_tracking_id_segment}}],\n   \"distribution\": [\n     {\n            \"esp_connection_id\": {{sms_connectionId}},\n            \"percent\": 100\n     }\n   ],\n    \"schedule_date\": {{time_30}}\n} ",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{api_domain}}/api/mailings/",
					"host": [
						"{{api_domain}}"
					],
					"path": [
						"api",
						"mailings",
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "Read sms",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if(pm.response.code === 200)",
							"{",
							"    var jsonData = pm.response.json()",
							"    ",
							"    var smsText = jsonData.Body;",
							"    smsText = smsText.split('!#!')",
							"    var size = Object.keys(smsText[2].trim()).length;",
							"    var link_disabled = smsText[2].trim()",
							"    pm.globals.set(\"link_disabled\", link_disabled)",
							"    ",
							"    pm.test(`Test Disable short link and tracking \"Time : ${jsonData.timestamp}`, function () {",
							"        pm.expect(size).to.be.eql(parseInt(pm.environment.get(\"disable_short_link_sms_link_length\")));",
							"    })",
							"}else{",
							"    pm.test(`Test SMS not received`, function () {",
							"    pm.expect(\"\").to.equal(\"SMS not received\");",
							"  })",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X_USERNAME",
						"value": "{{username}}",
						"type": "text"
					},
					{
						"key": "X_PASSWORD",
						"value": "{{password}}",
						"type": "text"
					},
					{
						"key": "X_ACCOUNT_CODE",
						"value": "{{account_code}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"to_number\": \"{{twillio_number_1}}\",\n    \"unique_id\": \"disable_slink_and_tracking_{{sms_connectionId}}\",\n    \"timeout\": 600000\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://app.ongageqa.site/sms_db/get_last",
					"protocol": "http",
					"host": [
						"app",
						"ongageqa",
						"site"
					],
					"path": [
						"sms_db",
						"get_last"
					]
				}
			},
			"response": []
		},
		{
			"name": "Click link",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if(pm.response.code === 200)",
							"{",
							"    var jsonData = pm.response.text()",
							"    pm.test(`Test Disable short link and tracking \"Time : ${jsonData.timestamp}`, function () {",
							"        pm.expect(jsonData).contains(\"www.lipsum.com\");",
							"    })",
							"}else{",
							"    pm.test(`Test SMS not received`, function () {",
							"    pm.expect(\"\").to.equal(\"SMS not received\");",
							"  })",
							"}",
							"",
							"pm.globals.unset(\"link_disabled\")"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X_USERNAME",
						"value": "{{username}}",
						"type": "text"
					},
					{
						"key": "X_PASSWORD",
						"value": "{{password}}",
						"type": "text"
					},
					{
						"key": "X_ACCOUNT_CODE",
						"value": "{{account_code}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{link_disabled}}",
					"host": [
						"{{link_disabled}}"
					]
				}
			},
			"response": []
		}
	]
}