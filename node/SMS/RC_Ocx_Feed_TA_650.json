	"item": [
		{
			"name": "Create and Send Campaign",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.globals.unset(\"time_30\");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.globals.set(\"time_30\", Math.round((new Date()).getTime() / 1000) + 30);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X_USERNAME",
						"type": "text",
						"value": "{{username}}"
					},
					{
						"key": "X_PASSWORD",
						"type": "text",
						"value": "{{password}}"
					},
					{
						"key": "X_ACCOUNT_CODE",
						"type": "text",
						"value": "{{account_code}}"
					},
					{
						"key": "Content-Type",
						"type": "text",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n   \"name\": \"SMS RC Ocx Feed\",\n   \"list_id\": {{list_id}} ,\n   \"email_message\": {{sms_id_rc_ocx_feed}},\n   \"segments\": [{{rc_sms_id_segment}}],\n   \"distribution\": [\n     {\n            \"esp_connection_id\": {{sms_connectionId}},\n            \"percent\": 100\n     }\n   ],\n    \"schedule_date\": {{time_30}}\n} ",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{api_domain}}/api/mailings/",
					"host": [
						"{{api_domain}}"
					],
					"path": [
						"api",
						"mailings",
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "Read sms",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if(pm.response.code === 200){",
							"  var jsonData = pm.response.json()",
							"  var smsText1 = jsonData.Body;",
							"  var smsText = smsText1.split(\"ü!@#ü\")",
							"  pm.test(`Test Regular Campaign ocx feed is working \"Time : ${jsonData.timestamp}`, function () {",
							"    pm.expect(smsText[1]).to.equal(\"Regular\");",
							"    pm.expect(smsText[3]).to.equal(\"suit\");",
							"  })",
							"}else{",
							"  pm.test(`Test Regular Campaign ocx feed is working`, function () {",
							"   pm.expect(\"\").to.equal(\"Regular\");",
							"   pm.expect(\"\").to.equal(\"suit\");",
							"  })",
							" }",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X_USERNAME",
						"value": "{{username}}",
						"type": "text"
					},
					{
						"key": "X_PASSWORD",
